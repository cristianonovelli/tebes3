<tebes:TestPlan lg="en" 
	xmlns:tebes="http://www.ubl-italia.org/tebes"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	
	<tebes:TestPlanHeader>
	    <tebes:Id>81</tebes:Id>
	    <tebes:Name>TP-81</tebes:Name>
	    <tebes:State>draft</tebes:State>
	    <tebes:Description lg="en">TP-81 Test Plan is used to test a Web Service Client for the Global Weather Web Service case.</tebes:Description>
	    <tebes:Description lg="it">Il Test Plan TP-81 è usato per il test del trasporto Web Service Client per il caso Global Weather Web Service.</tebes:Description>
	    <tebes:UserId>0</tebes:UserId>
	    <tebes:CreationDatetime>2014-08-21T16:43:00Z</tebes:CreationDatetime>
	    <tebes:LastUpdateDatetime>2014-08-21T16:43:00Z</tebes:LastUpdateDatetime>
	</tebes:TestPlanHeader>
    
	<tebes:TestActionList>
	
		<tebes:TestAction id="TA-1_TP-81" number="1">
			
			<tebes:ActionName>Web Service Client</tebes:ActionName>
			<tebes:ActionDescription lg="en">Test of Client for the Global Weather Web Service.</tebes:ActionDescription>
			<tebes:ActionDescription lg="it">Test Client per il Web Service Global Weather.</tebes:ActionDescription>
			
			<tebes:Test 
				lg="taml" 
				type="TestAssertion" 
				skipPrerequisites="true"
				location="http://www.ubl-italia.org/TeBES/testsuites/WS/TS-006_WS/TC-001_SOAPEnvelope-WS.xml">TA-002_TC-001_TS-006</tebes:Test>
			
			<tebes:Inputs>
			    
			    <tebes:Input>		
				    <tebes:Name>TestWS</tebes:Name>
				    
					<tebes:InputDescription lg="en">Text Message from TeBES to User to invite him to test his Client to the Web Service URL.</tebes:InputDescription>
					<tebes:InputDescription lg="it">Messaggio testuale di TeBES all'utente per invitarlo a testare il proprio Client all'URL del Web Service generato.</tebes:InputDescription>	
					
					<tebes:SUT 
					    type="transport"
					    interaction="webservice-client" 
						lg="soap"
						fileIdRef="TI-1_transport-soap-webservice-client-IN-1_TA-1_TP-81">		    
					</tebes:SUT>
					
					<tebes:GUI reaction="message">
						<tebes:GUIDescription lg="en">The Web Service is ready. Check your client to the specified URL.</tebes:GUIDescription>				
						<tebes:GUIDescription lg="it">Il Web Service  è pronto. Prova il tuo Client all'URL specificato.</tebes:GUIDescription>				    				    
					</tebes:GUI>
				</tebes:Input>

			</tebes:Inputs>			

		</tebes:TestAction>
		
	</tebes:TestActionList>

	<!-- 
		The "tebes:Choreography" element specifies a choreography among the defined test actions. 
		If this element is empty, the N actions MUST be executed from number 1 to N, sequentially.
		
		The choreography XML element is work in progress:
		a solution to express choreography may be an ebBP-like XML syntax. 
	-->	
	<tebes:Choreography />
	
</tebes:TestPlan>

